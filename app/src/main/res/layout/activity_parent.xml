<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ParentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/space_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:space_background_color="@android:color/white"
        app:active_item_color="@color/colorPrimary"
        app:inactive_item_color="@android:color/black"
        app:centre_button_color="@android:color/black"
        app:centre_button_icon="@drawable/ic_tab_add"
        app:active_centre_button_background_color="@color/colorPrimary"
        app:active_centre_button_icon_color="@android:color/white"
        app:inactive_centre_button_icon_color="@android:color/white"
        app:space_item_icon_size="24dp"
        app:space_item_icon_only_size="24dp"
        app:layout_behavior="com.luseen.spacenavigation.SpaceNavigationViewBehavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>