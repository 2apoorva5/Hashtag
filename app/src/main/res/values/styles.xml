<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

        //Material Dialog
        <item name="material_dialog_background">@android:color/white</item>
        <item name="material_dialog_title_text_color">@color/textColorPrimaryDark</item>
        <item name="material_dialog_message_text_color">@color/textColorPrimaryDark</item>
        <item name="material_dialog_positive_button_color">@color/colorPrimary</item>
        <item name="material_dialog_positive_button_text_color">@android:color/white</item>
        <item name="material_dialog_negative_button_text_color">@color/colorPrimary</item>
    </style>

    <style name="ErrorAlert" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimaryLight</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InfoAlert" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimaryLight</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SuccessAlert" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimaryLight</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>


    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="ProgressText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SpotsDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@style/ProgressText</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="DialogSpotCount">4</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
